{
    "version": 2,
    "builds": [
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        },
        {
            "src": "shoestore/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12",
                "installCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "shoestore/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "shoestore.settings",
        "DJANGO_ENV": "production",
        "PYTHONPATH": "/var/task",
        "SUPABASE_DB_USER": "postgres",
        "SUPABASE_DB_PASSWORD": "Seyisensei18",
        "DATABASE_URL": "postgres://postgres:Seyisensei18@db.vlcyjeetsziuiwrpegvp.supabase.co:5432/postgres",
        "POSTGRES_SSL": "true",
        "PIP_TARGET": "/var/task"
    }
}
