{
    "version": 2,
    "builds": [
        {
            "src": "wsgi_handler.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12",
                "installCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt && python manage.py collectstatic --noinput"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/tmp/static/$1",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/(.*)",
            "dest": "wsgi_handler.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "shoestore.settings",
        "DJANGO_ENV": "production",
        "PYTHONPATH": "/var/task",
        "SUPABASE_DB_USER": "postgres",
        "SUPABASE_DB_PASSWORD": "Seyisensei18",
        "DATABASE_URL": "postgres://postgres:Seyisensei18@db.vlcyjeetsziuiwrpegvp.supabase.co:5432/postgres",
        "POSTGRES_SSL": "true",
        "PIP_TARGET": "/var/task",
        "STATIC_ROOT": "/tmp/static",
        "MEDIA_ROOT": "/tmp/media"
    }
}
